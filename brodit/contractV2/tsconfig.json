{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "types": ["node"],
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "test/**/*.ts", "typings/**/*.d.ts"],
  "exclude": ["node_modules"],
}
